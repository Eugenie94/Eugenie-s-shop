{% extends 'base.html.twig' %}

{% block title %}Fiche produit | {{ produit.nom }}{% endblock %}

{% block body %}
    <h1>Fiche produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
             <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
             <tr>
                <th>Photo</th>
                <td>
                {% if produit.photo is not null %}
                    <img src="{{ asset('/uploads/' ~ produit.photo ) }}" alt="" style="width:100px">
                {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('home') }}" style="margin-right:7px;"><i class="fa-solid fa-arrow-left-long"></i></a>
    
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_edit', {'id': produit.id}) }}" style="margin-right:7px;"><i class="fa-solid fa-pen-to-square"></i></a>
        {{ include('produit/_delete_form.html.twig') }} 
    {% endif %}
    {% if is_granted('ROLE_USER') %}
		<a style="margin-left:10px;" href="{{ path('panier_new') }}"><i class="fa-solid fa-cart-arrow-down" style="margin-left:5px;color:green;"></i></a>
	{% endif %}
{% endblock %}