{% extends 'base.html.twig' %}

{% block title %}{{ 'login.loginTitle'|trans }}{% endblock %}

{% block body %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {{ 'login.loginConnected'|trans }} {{ app.user.nom }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'login.loginMerci'|trans }}</h1>
        <label for="inputEmail">{{ 'login.loginEmail'|trans }}</label>
        <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label for="inputPassword">{{ 'login.loginMdp'|trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >


        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'login.loginInscription'|trans }}
        </button>
    </form>
{% endblock %}
