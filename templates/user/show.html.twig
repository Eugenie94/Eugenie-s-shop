{% extends 'base.html.twig' %}

{% block title %}{{ 'user.showTitle'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'user.showH1'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'user.showId'|trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'user.showEmail'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'user.showRoles'|trans }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'user.showPassword'|trans }}</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>{{ 'user.showNom'|trans }}</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>{{ 'user.showPrenom'|trans }}</th>
                <td>{{ user.prenom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">{{ 'user.showReturnList'|trans }}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ 'user.showEdit'|trans }}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
