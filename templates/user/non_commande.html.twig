{% extends 'base.html.twig' %}

{% block title %}{{ 'noCommand.noCommandTitle'|trans }}{% endblock %}


{% block body %} 


<h1 style="padding-bottom:30px;padding-top:30px;">{{ 'noCommand.noCommandH1'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th style="width:33%;">{{ 'noCommand.noCommandUtilisateur'|trans }}</th>
                <th style="width:33%;">{{ 'noCommand.noCommandNumeroPanier'|trans }}</th>
                <th style="width:33%;">{{ 'noCommand.noCommandContenuPanier'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for p in panier %}
            <tr>
                <td>{{ p.utilisateur }}</td>
                <td>{{ p.id }}</td>

                {# {% for c in contenuPaniers %}
                    <td>{{ c.id.produit }}</td>
                {% endfor %} #}

            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'noCommand.noCommandNoPanierNoPaid'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %} 